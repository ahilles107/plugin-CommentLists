{% block datePicker_widget %}
    {% spaceless %}
        <input type="text" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        {%  set attr = attr|merge({'class': ((attr.class|default('') ~ ' commentsDatePicker form-control input-sm')|trim)}) %}
        {% set  id = id ~ "_datepicker" %}
        {% set  full_name = "datepicker_" ~ full_name  %}
        <input type="text" placeholder="yyyy-mm-dd" {{ block('widget_attributes') }}/>
    {% endspaceless %}
{% endblock datePicker_widget %}

{% block dateTimePicker_widget %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' commentsDateTimePicker')|trim}) %}
    {{ form_errors(form.date) }}
    {{ form_errors(form.time) }}
    {{ form_widget(form.date, {'id' : id ~ '_date'}) }}
    {{ form_widget(form.time.hour, {'id' : id ~ '_time'}) }} :
    {{ form_widget(form.time.minute, {'id' : id ~ '_time', 'attr' : {'class' : 'form-control input-sm', 'style': 'width:' }}) }}
{% endblock %}